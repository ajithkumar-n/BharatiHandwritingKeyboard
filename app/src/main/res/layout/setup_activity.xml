<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F7F7">

    <LinearLayout
        android:id="@+id/setup_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setup_linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/setup_linearLayout1">

        <ImageView
            android:id="@+id/number1"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight=".15"
            android:src="@drawable/number_one"
            android:background="@android:color/transparent"
            android:scaleType = "centerInside" />

        <Button
            android:id="@+id/enable_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight=".85"
            android:text="@string/enable"
            android:background="#dfdddd" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setup_linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:orientation="horizontal"
        android:layout_below="@+id/setup_linearLayout2">

    </LinearLayout>


    <LinearLayout
        android:id="@+id/setup_linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/setup_linearLayout3">

        <ImageView
            android:id="@+id/number2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight=".15"
            android:src="@drawable/number_two"
            android:background="@android:color/transparent"
            android:scaleType = "centerInside" />

        <Button
            android:id="@+id/choose_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight=".85"
            android:text="@string/choose"
            android:background="#dfdddd" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setup_linearLayout5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/setup_linearLayout4">

        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/textView1"
            android:paddingTop="10dp"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/textView2"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:fontFamily="sans-serif"
            android:id="@+id/textView3"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/setup_linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/about_bharati"
            android:text="@string/about_bharati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <Button
            android:id="@+id/getting_started"
            android:text="@string/getting_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>

    </LinearLayout>





</RelativeLayout>